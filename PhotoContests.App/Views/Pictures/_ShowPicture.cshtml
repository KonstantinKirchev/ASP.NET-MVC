@model PhotoContests.App.Models.ViewModels.PictureViewModel

<div class="col-md-4">
    <div class="thumbnail">
        <a href="@Model.PictureUrl" alt="" class="img-responsive" data-lightbox="image-1" data-title="@Model.Owner">
            <img src="@Model.PictureUrl" alt="" />
        </a>
        <div class="caption">
            <h3>Picture Title to be implemented</h3>
            <p>Picture Description to be implemented</p>
            <p>
                <a href="#" class="btn btn-primary" role="button">Vote <span class="badge">@Model.VoteCount</span></a>
                <button class="btn btn-default collapsed" role="button" data-toggle="collapse" data-target="#commentsCollapse@(Model.Id)">Comments <span class="badge ng-binding">@Model.CommentsCount</span></button>
            </p>
            @Html.Partial("~/Views/Comments/_ShowComments.cshtml", Model.Comments)
        </div>
    </div>
</div>